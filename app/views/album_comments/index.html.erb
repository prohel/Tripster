<h1>Listing album_comments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Text</th>
      <th>Album</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @album_comments.each do |album_comment| %>
      <tr>
        <td><%= album_comment.user %></td>
        <td><%= album_comment.text %></td>
        <td><%= album_comment.album %></td>
        <td><%= link_to 'Show', album_comment %></td>
        <td><%= link_to 'Edit', edit_album_comment_path(album_comment) %></td>
        <td><%= link_to 'Destroy', album_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Album comment', new_album_comment_path %>
